{{> header }}

{{> headerFrontend }}

<div class="container-fluid mt-6">
    <div class="row">
        <div class="col-md-3">Hola</div>
        <div class="col-md-6">mundo</div>
        <div class="col-md-3">otra ves</div>
    </div>

    {{#if usuario}}
        <p>Usuario encontrado</p>
        <table class="table">
            <tr>
                <th>Nombre:</th>
                <td>{{ usuario.nombre }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ usuario.username }}</td>
            </tr>
            <tr>
                <th>Correo</th>
                <td>{{ usuario.correo }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ usuario.role }}</td>
            </tr>
            <tr>
                <th>Token</th>
                <td>{{ token }}</td>
            </tr>
        </table>
    {{/if}}
</div>

{{#unless usuario}}
    <script>
        localStorage.removeItem('usuario');
        localStorage.removeItem('token');
    </script>
{{/unless}}

{{> footer }}